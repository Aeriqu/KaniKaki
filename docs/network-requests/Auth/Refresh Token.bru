meta {
  name: Refresh Token
  type: graphql
  seq: 4
}

post {
  url: http://localhost/api
  body: graphql
  auth: bearer
}

auth:bearer {
  token: {{AUTH_TOKEN}}
}

body:graphql {
  mutation {
  	refreshToken(identifier: "testUser") {
  		token
  	}
  }
}

script:post-response {
  let data = res.body.data;
  bru.setEnvVar("AUTH_TOKEN", data.refreshToken.token);
}
