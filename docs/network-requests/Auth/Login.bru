meta {
  name: Login
  type: graphql
  seq: 2
}

post {
  url: http://localhost/api
  body: graphql
  auth: none
}

body:graphql {
  mutation {
  	login(identifier: "testUser", credential: "testPassword") {
  		token
  	}
  }
}

script:post-response {
  let data = res.body.data;
  bru.setEnvVar("AUTH_TOKEN", data.login.token);
}
